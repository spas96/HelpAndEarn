<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/greg_layout">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />


    <EditText
        android:id="@+id/gname"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="10dp"
        android:hint="First Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/glname"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/gname"
        android:layout_alignStart="@+id/gname"
        android:layout_below="@+id/gname"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Last Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/gbdate"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/glname"
        android:layout_alignStart="@+id/glname"
        android:layout_below="@+id/glname"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_date_range_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Date of birth"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:inputType="date" />

    <TextView
        android:id="@+id/gerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gbdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#f44242"/>

    <Button
        android:id="@+id/save_details"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/gbdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/login_button"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_greg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Already registered? Sign in here!"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_greg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:text="Note! These details can't be changed later!"
        android:textSize="18sp"
        android:textColor="#ffffff"/>


</RelativeLayout>