<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/reg_layout">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:ems="10"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email_white_24dp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/mword"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_security_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Memorable Word"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/mword"
        android:layout_alignStart="@+id/mword"
        android:layout_below="@+id/mword"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="10dp"
        android:hint="First Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Last Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/bdate"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/lname"
        android:layout_alignStart="@+id/lname"
        android:layout_below="@+id/lname"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_date_range_white_24dp"
        android:drawablePadding="10dp"
        android:hint="Date of birth"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:inputType="date" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#f44242"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button"
        android:text="REGISTER"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Already registered? Sign in here!"
        android:textSize="16sp"
        android:textColor="#ffffff"/>


</RelativeLayout>