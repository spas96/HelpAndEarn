<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/topbackgroundprofile"
    android:id="@+id/accountSettings_layout">


        <ImageView
            android:id="@+id/g_acc_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

    <TextView
        android:id="@+id/accLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Account Settings"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="26dp"/>

    <ImageView
        android:id="@+id/g_acc_save"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_save_white_24dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/scrollAcc"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:text="email"
                        android:id="@+id/g_acc_email"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="You are using Google signin!"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:textAlignment="center"
                        android:textColor="#f3ae1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="To change your password or any other account settings please visit Google Support page!"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="60dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#f3ae1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:text="Change search distance"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="50dp"
                        android:textColor="#f3ae1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <SeekBar
                        android:id="@+id/distance_seekbar_g"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:progressDrawable="@drawable/orange_scrubber_progress"
                        android:thumb="@drawable/orange_scrubber_control"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:id="@+id/selected_distance_g"
                        android:text="5 km"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#f3ae1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </ScrollView>

</RelativeLayout>