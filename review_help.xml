<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/topbackgroundprofile"
    android:id="@+id/review_layout">

    <ImageView
        android:id="@+id/back_review"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_back_white_24dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/pic_help"
        android:layout_below="@+id/back_review"
        android:layout_width="120dp"
        android:layout_height="212dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/edittextborder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_review_help"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/description_review_help"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="170dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/publisher_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_person_34"
        android:layout_below="@+id/top"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/award_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_pages_black_24dp"
        android:layout_below="@+id/publisher_review"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/address_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_place_white_24dp"
        android:layout_below="@+id/award_review"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/date_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_date_34"
        android:layout_below="@+id/address_review"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/time_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_access_time_34"
        android:layout_below="@+id/date_review"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>


    <TextView
        android:id="@+id/already_applied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You already applied for this job"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/time_review"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/help_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/already_applied"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_button"
        android:text="I can help"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>